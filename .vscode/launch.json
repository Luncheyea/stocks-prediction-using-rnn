    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "eval with specific csv",
            "type": "debugpy",
            "request": "launch",
            "program": "eval.py",
            "console": "integratedTerminal",
            "args": [
                "--model", "./model.pth",
                "--dataset", "./dataset/eval.csv"
            ]
        },
        {
            "name": "train with specific csv",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [
                "--model", "./model.pth",
                "--dataset", "./dataset/0050.TW close.csv",
                "--lr", "0.001", 
                "--epochs", "100"
            ]
        }
    ]
}